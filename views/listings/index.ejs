<% layout("/layouts/boilerplate.ejs") %>

<style>

  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter{
    margin-top: 2rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
   
  }

  .filter p{
    font-size: 0.8rem;
  }

  .filter a{
    text-decoration: none;
    color: black;
  }

  .filter:hover
  {
    opacity: 1;
    cursor: pointer;
  }

  /* by default we are keep tax-info none */
  .tax-info{
    display: none;
  }
 .tax-toggle{
  border:1px solid black;
  border-radius: 1rem;
  height: 3.5rem;
   /* margin-top: 1.6rem; */
  margin-left: 18rem; 
  padding: 1rem;
  display: flex;
  align-items: center;
 }

</style>

<body>
   
    <!-- <h3>All Listings</h3> -->
      <div id="filters">
          <div class="filter">
            <a href="/listings/filter?category=Trending">
              <div><i class="fa-solid fa-fire"></i></div>
              <p>Trending</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Rooms">
              <div><i class="fa-solid fa-bed"></i></div>
              <p>Rooms</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Mountains">
              <div><i class="fa-solid fa-mountain-sun"></i></div>
              <p>Mountains</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Camp">
              <div><i class="fa-solid fa-tents"></i></div>
              <p>Camp</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=House">
              <div><i class="fa-solid fa-house"></i></div>
              <p>House</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Beaches">
              <div><i class="fa-solid fa-umbrella-beach"></i></div>
              <p>Beaches</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Mountain city">
              <div><i class="fa-solid fa-mountain-city"></i></div>
              <p>Mountain city</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Pool">
              <div><i class="fa-solid fa-person-swimming"></i></div>
              <p>Pool</p>
            </a>
          </div>

          <div class="filter">
            <a href="/listings/filter?category=Forest">
              <div><i class="fa-solid fa-tree"></i></div>
              <p>Forest</p>
            </a>
          </div>

          <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
              <label class="form-check-label" for="switchCheckDefault">Display Total after TAXES</label>
            </div>
          </div>
      </div>

    

    <!-- <form action="/listings/new" method="get"> 
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3  row-cols-md-3  row-cols-sm-2 mt-3">
    <% for (let listing of alllistings) { %>
      <a href="/listings/<%= listing._id  %>" class="listing-link">
    <div class="card col listing-card" >
        <img src="<%=listing.image.url  %>" class="card-img-top" alt="listing img">
        <div class="card-img-overlay"></div>
        
        <div class="card-body">
        <p class="card-title"><b><i><%= listing.title %></i></b></p><br>
        <p class="card-description"><%= listing.description  %></p>
        <p class="card-price">&#8377;<%=listing.price.toLocaleString("en-IN")%>/night
           <i class="tax-info">&nbsp;+18% GST</i>
          </p>
        </div>
    </div><br>
    </a>
    <% } %>

  </div>


  <script>
    let taxSwitch=document.querySelector("#switchCheckDefault");

    taxSwitch.addEventListener("click",()=>{
      let taxInfo=document.querySelectorAll(".tax-info");
      for(info of taxInfo){
        if(info.style.display!="inline"){
        info.style.display="inline";
        }
        else{
          info.style.display="none";
        }
      }
    })
  </script>

</body>
</html>